<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/root_layout"
    android:background="@drawable/card_surface_shape"
    android:layout_height="match_parent"
    tools:context=".DestinationActivity">

    <RelativeLayout
        android:id="@+id/group_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="end">

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_bg__credit_card_checkout_____checkout_ek2_color"
            android:textSize="28sp"
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/addFav"
            android:layout_width="200dp"
            android:layout_height="50dp"

            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="200dp"
            android:layout_marginTop="3dp"
            android:clickable="true"
            android:fontFamily="@font/comfortaabold"

            android:text="@string/txtAddFav"
            android:textColor="@color/add_new_color"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/description"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Description" />

        <Button
            android:id="@+id/image"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Image" />

        <Button
            android:id="@+id/location"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Location" />
    </LinearLayout>

</LinearLayout>