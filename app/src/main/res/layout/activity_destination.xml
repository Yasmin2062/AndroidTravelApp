<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/root_layout"
    android:background="@drawable/card_surface_shape"
    android:layout_height="match_parent"
    tools:context=".DestinationActivity">

    <RelativeLayout
        android:id="@+id/group_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="clip_horizontal"
        android:layout_marginTop="7dp"
        android:gravity="end">

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="Ramallah"
            android:textColor="@color/_bg__credit_card_checkout_____checkout_ek2_color"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addFav"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="200dp"
            android:layout_marginTop="13dp"
            android:clickable="true"
            android:fontFamily="@font/comfortaabold"
            android:text="@string/txtAddFav"

            android:textColor="@color/add_new_color"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp">

                <View

                    android:id="@+id/description"
                    android:layout_width="124dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/rectangle_1_shape"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/descriptionText"
                    android:layout_width="111dp"
                    android:layout_height="38dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Description"
                    android:textAlignment="center"
                    android:textColor="@color/_bg__credit_card_checkout_____checkout_ek2_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp">

                <View

                    android:id="@+id/image"
                    android:layout_width="124dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/rectangle_1_shape"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/imageText"
                    android:layout_width="111dp"
                    android:layout_height="38dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Image"
                    android:textAlignment="center"
                    android:textColor="@color/_bg__credit_card_checkout_____checkout_ek2_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp">

                <View

                    android:id="@+id/location"
                    android:layout_width="124dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/rectangle_1_shape"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="111dp"
                    android:layout_height="38dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Location"
                    android:textAlignment="center"
                    android:textColor="@color/_bg__credit_card_checkout_____checkout_ek2_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>