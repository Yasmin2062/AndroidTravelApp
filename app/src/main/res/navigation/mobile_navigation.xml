    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.travelapp.ui.profile.ProfileFragment"
        android:label="@string/menu_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/nav_logout"
